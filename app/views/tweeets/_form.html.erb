<%= simple_form_for(tweeet) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="field">
    <div class="control">
      <%= f.input :tweeet, label: 'Tweeet about it', input_html: { class: 'textarea' }, wrapper: false , label_html: { class: 'label' }, placeholder: 'Compose a new Tweeet....'  %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, 'Tweeet', class: 'button is-info' %>
  </div>
<% end %>
